{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Makefile$"],
      "matchStrings": ["namely/protoc-all:(?<currentValue>.*?)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/namely/protoc-all",
    }
  ]
}
